<div class="container py-8">
  <div class="mb-8">
    <%= ui_button "Back to #{@organization.name}", url: @back_path, kind: :secondary, size: :sm %>
  </div>

  <div class="mb-12">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Manage Logos - <%= @organization.name %></h1>
      <div class="flex items-center gap-6">
        <div class="flex items-center gap-3">
          <span class="text-sm text-gray-600">Preview:</span>
          <div class="<%= @organization.logo_background_class %> rounded-lg border <%= @organization.logo_border_class %> size-24 p-3 flex items-center justify-center">
            <% if @organization.has_logo_image? %>
              <%= image_tag @organization.logo_image_path,
                    class: "w-full h-full object-contain",
                    alt: "#{@organization.name} Logo Preview",
                    loading: "lazy" %>
            <% else %>
              <span class="text-lg font-bold text-gray-600"><%= @organization.name.first %></span>
            <% end %>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <span class="text-sm text-gray-600">Background:</span>
          <%= form_with model: @organization, url: organization_logos_path(@organization), method: :patch, local: true, class: "inline-block", data: {turbo_action: "replace"} do |form| %>
            <%= form.select :logo_background, [["White", "white"], ["Black", "black"], ["Transparent", "transparent"]],
                  {selected: @organization.logo_background || "white"},
                  {class: "select select-sm select-bordered", onchange: "this.form.submit();"} %>
          <% end %>
        </div>
      </div>
    </div>

    <% if @organization.logo_urls.present? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="logos-grid">
        <% @organization.logo_urls.each do |logo_url| %>
          <div class="logo-card bg-gray-50 rounded-lg shadow-md p-4 transition-colors duration-200 <%= "ring-2 ring-blue-500" if @organization.logo_url == logo_url %>">
            <div class="flex justify-center mb-2 h-6">
              <% if @organization.logo_url == logo_url %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  Selected
                </span>
              <% end %>
            </div>
            <div class="mb-4">
              <div class="logo-bg border-2 border-gray-200 rounded-lg p-4 transition-colors duration-200 <%= case @organization.logo_background when "black" then "bg-black" when "transparent" then "bg-transparent" else "bg-white" end %>">
                <%= image_tag logo_url, alt: "#{@organization.name} logo", class: "max-w-full h-32 object-contain mx-auto", loading: "lazy", onerror: "this.style.display='none'; this.nextElementSibling.style.display='block';" %>
                <div class="text-center text-gray-500 hidden">
                  <p>Image failed to load</p>
                </div>
              </div>
            </div>
            <div class="text-sm text-gray-600 break-all logo-url mb-3">
              <a href="<%= logo_url %>" target="_blank" class="text-blue-600 hover:text-blue-800 underline">
                <%= logo_url %>
              </a>
            </div>
            <% if @organization.logo_url == logo_url %>
              <div class="text-center">
                <button class="btn btn-sm btn-disabled" disabled>Selected</button>
              </div>
            <% else %>
              <%= form_with model: @organization, url: organization_logos_path(@organization), method: :patch, local: true, class: "text-center", data: {turbo_action: "replace"} do |form| %>
                <%= form.hidden_field :logo_url, value: logo_url %>
                <%= form.submit "Select Logo", class: "btn btn-sm btn-outline btn-primary" %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 text-gray-500">
        <p class="text-lg">No logo URLs found.</p>
      </div>
    <% end %>
  </div>
</div>
