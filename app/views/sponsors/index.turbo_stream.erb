<%= turbo_stream.append "sponsors" do %>
  <% cache @sponsors do %>
    <%= render partial: "sponsors/sponsor", collection: @sponsors, as: :sponsor, cached: true %>
  <% end %>
<% end %>

<% if @pagy.next.present? %>
  <%= turbo_stream.replace "pagination" do %>
    <%= turbo_frame_tag :pagination,
                        data: {
                          controller: "lazy-loading",
                          lazy_loading_src_value: sponsors_path(letter: params[:letter], page: @pagy.next, format: :turbo_stream)
                        } %>
  <% end %>
<% end %>
