<%= link_to sponsor_path(sponsor), id: dom_id(sponsor), class: "flex justify-between" do %>
  <div class="flex items-center gap-2">
    <% if sponsor.logo_url.present? %>
      <img src="<%= sponsor.logo_url %>" alt="<%= sponsor.name %> logo" class="rounded h-8 w-8 object-contain">
    <% end %>
    <span><%= sponsor.name %></span>
  </div>

  <%= ui_badge("Sponsor", kind: :secondary, outline: true, size: :lg, class: "min-w-10") %>
<% end %>
