<%# locals: (stamps:) %>

<div class="mx-auto w-full overflow-hidden rounded-[40px] bg-gradient-to-b from-gray-600 via-gray-600 to-gray-400 p-[12px]">
  <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-6 gap-4 p-4 rounded-[32px] bg-white auto-rows-fr">
    <% stamps.each do |stamp| %>
      <div class="w-full h-full border-4 border-dotted border-gray-300 rounded-xl p-2 bg-white">
        <div class="w-full h-full rounded-xl flex items-center justify-center relative overflow-hidden p-4">
          <%= ui_stamp(stamp, rotate: true, zoom_effect: true, class: "hover:opacity-70") %>
        </div>
      </div>
    <% end %>

    <% cols_per_row = 6 %>
    <% min_rows = 3 %>
    <% remaining = [min_rows * cols_per_row - stamps.count, (cols_per_row - (stamps.count % cols_per_row)) % cols_per_row].max %>
    <%# remaining = (cols_per_row - (stamps.count % cols_per_row)) % cols_per_row %>

    <% remaining.times do %>
      <div class="aspect-square flex items-center justify-center">
        <div class="w-full h-full border-4 border-dotted border-gray-300 rounded-xl p-2 bg-white">
          <div class="w-full h-full rounded-xl flex items-center justify-center relative overflow-hidden">
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
