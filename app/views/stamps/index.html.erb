<style>
  .passport-stamp-card {
    background: linear-gradient(45deg, #faf8f4 0%, #f5f3ef 100%);
    position: relative;
  }

  .passport-stamp-card figure {
    overflow: visible;
    padding: 8px;
  }

  .passport-stamp {
    transition: all 0.3s ease;
    transform: rotate(-2deg) scale(0.98);
    position: relative;
    filter: brightness(0) saturate(100%) sepia(1) hue-rotate(220deg) saturate(2) opacity(0.8);
  }

  .passport-stamp-card:nth-child(even) .passport-stamp {
    transform: rotate(2deg) scale(1.02) scaleY(0.96);
  }

  .passport-stamp-card:nth-child(3n) .passport-stamp {
    transform: rotate(-3deg) scale(0.94) scaleX(1.05);
  }

  .passport-stamp-card:nth-child(4n) .passport-stamp {
    transform: rotate(1.5deg) scale(1.01) scaleY(1.03);
  }

  .passport-stamp-card:nth-child(5n) .passport-stamp {
    transform: rotate(-1deg) scale(0.97) scaleX(0.98);
  }

  .passport-stamp-card:nth-child(6n) .passport-stamp {
    transform: rotate(2.5deg) scale(1.03) scaleY(0.97);
  }

  .passport-stamp-card:nth-child(7n) .passport-stamp {
    transform: rotate(-2.5deg) scale(0.99) scaleX(1.02);
  }

  .passport-stamp-card:nth-child(8n) .passport-stamp {
    transform: rotate(0.5deg) scale(1.04) scaleY(0.95);
  }

  .passport-stamp-card:nth-child(9n) .passport-stamp {
    transform: rotate(-1.5deg) scale(0.96) scaleX(1.03);
  }

  .passport-stamp-card:nth-child(10n) .passport-stamp {
    transform: rotate(3deg) scale(1.01) scaleY(1.02);
  }

  .passport-stamp-card:hover .passport-stamp {
    filter: none;
    transform: rotate(0deg) scale(1) scaleX(1) scaleY(1) !important;
  }

</style>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Ruby Passport Stamps</h1>

    <% if @stamps.empty? %>
      <div class="alert alert-info">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <span>No passport stamps available yet. Run <code>rake export_stamps</code> to generate them from the Sketch file.</span>
      </div>
    <% else %>
      <div class="mb-8 text-gray-600">
        <p>Collect stamps from Ruby conferences around the world! <%= @stamps.size %> stamps available.</p>
      </div>

      <% if @missing_stamp_countries.present? %>
        <div class="mb-8 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
          <h3 class="text-lg font-semibold mb-2 text-yellow-800">Countries with events but no stamps:</h3>
          <div class="flex flex-wrap gap-2">
            <% @missing_stamp_countries.each do |country| %>
              <div class="badge badge-warning badge-outline">
                <%= country.translations["en"] %> (<%= country.alpha2 %>)
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% @stamps_by_continent.each do |continent, stamps| %>
        <div class="mb-12">
          <h2 class="text-2xl font-semibold mb-6 text-gray-800"><%= continent || "Unknown" %></h2>

          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-6">
            <% stamps.each do |stamp| %>
              <div class="card bg-base-100 border border-gray-200 hover:border-gray-400 transition-colors duration-300 passport-stamp-card">
                <figure class="px-4 pt-4">
                  <%= image_tag stamp.asset_path,
                        alt: "#{stamp.name} passport stamp",
                        class: "rounded-xl w-full h-32 object-contain passport-stamp",
                        loading: "lazy" %>
                </figure>
                <div class="card-body items-center text-center p-4">
                  <h3 class="card-title text-sm">
                    <%= stamp.name %>
                  </h3>
                  <div class="badge badge-outline badge-sm truncate">
                    <%= stamp.code %>
                  </div>
                  <% if stamp.has_country? %>
                    <div class="card-actions mt-2">
                      <%= link_to "View Events",
                            country_path(country: stamp.country.alpha2.downcase),
                            class: "btn btn-xs btn-primary" %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
