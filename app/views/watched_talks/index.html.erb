<div class="container flex flex-col w-full gap-4 my-8 hotwire-native:my-0 hotwire-native:mb-8">
  <div class="flex items-end gap-2 title text-primary hotwire-native:mb-3">
    <h1 class="title hotwire-native:hidden" style="view-transition-name: title">
      <%= title "Recently Watched Videos" %>
    </h1>
  </div>

  <% if @talks.present? %>
    <div id="talks" class="grid min-w-full grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gallery">
      <%= render partial: "talks/card",
            collection: @talks,
            as: :talk,
            locals: {
              favoritable: true,
              user_favorite_talks_ids: [],
              watched_talks: @watched_talks,
              back_to: watched_talks_path
            } %>
    </div>
  <% else %>
    <div class="py-8 text-center">
      <h2 class="mb-4 text-xl">No watched videos yet</h2>
      <p class="mb-4 text-gray-600">Start watching videos to see them appear here.</p>
      <%= link_to "Browse Videos", talks_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
