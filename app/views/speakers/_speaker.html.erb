<%= link_to profile_path(speaker), data: {turbo_frame: "_top"}, id: dom_id(speaker), class: "flex justify-between items-center" do %>
  <div class="flex items-center gap-3">
    <div class="relative w-fit">
      <%= ui_avatar(speaker, size: :md) %>
    </div>

    <span><%= sanitize speaker.name_with_snippet %></span>
  </div>

  <div class="flex items-center gap-2">
    <%= ui_badge(
          speaker.talks_count,
          kind: :secondary,
          outline: true,
          size: :lg,
          class: "min-w-10"
        ) %>
  </div>
<% end %>
