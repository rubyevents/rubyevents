<%# locals: (talk_kinds:) %>

<section class="flex flex-col gap-4" data-section="talk-kinds">
  <div class="flex items-end justify-between">
    <div>
      <h2 class="text-xl font-bold">Browse by Format</h2>
      <p class="text-sm text-gray-500">Explore different talk formats</p>
    </div>
  </div>

  <div class="flex flex-wrap gap-3">
    <% talk_kinds.each do |kind, count| %>
      <%= link_to talks_path(kind: kind, status: "all"), class: "btn btn-outline btn-sm gap-2 hover:btn-primary", data: {turbo_frame: "_top"} do %>
        <%= Talk::KIND_LABELS[kind] || kind.titleize %>

        <span class="badge badge-ghost badge-sm"><%= count %></span>
      <% end %>
    <% end %>
  </div>
</section>
