<%= render partial: "events/header", locals: {event: @event, participation: @participation} %>

<div class="container py-8">
  <div class="mb-6">
    <%= link_to attendances_path, class: "link text-sm inline-flex items-center gap-1" do %>
      <%= fa("arrow-left", size: :xs) %>
      <span>Back to My Attendances</span>
    <% end %>
  </div>

  <%= render "events/my_attendance",
        event: @event,
        days: @attendance_days,
        tracks: @attendance_tracks,
        talks: @attendance_talks,
        in_person_talk_ids: @user_in_person_talk_ids,
        online_talk_ids: @user_online_talk_ids,
        feedback_talk_ids: @user_feedback_talk_ids %>
</div>
