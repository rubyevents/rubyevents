<div id="involvements_list">
  <% if involvements_by_role.any? %>
    <% involvements_by_role.each do |role, involvements| %>
      <div class="mb-8">
        <h3 class="text-lg font-semibold mb-4"><%= role.pluralize(involvements.count) %></h3>
        <div class="mb-6 min-w-full grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3 h-full">
          <% involvements.each do |involvement| %>
            <% if involvement.involvementable_type == "User" %>
              <div class="border rounded-lg bg-white hover:bg-gray-200 transition-bg duration-300 ease-in-out">
                <%= render partial: "users/card", locals: {user: involvement.involvementable} %>
              </div>
            <% elsif involvement.involvementable_type == "Sponsor" %>
              <div class="border rounded-lg bg-white hover:bg-gray-200 transition-bg duration-300 ease-in-out">
                <%= render partial: "sponsors/compact_card", locals: {sponsor: involvement.involvementable, hide_event_count: true, turbo_frame: true} %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12">
      <div class="max-w-md mx-auto">
        <div class="text-6xl mb-4">ü§ù</div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">No Involvements Yet</h2>
        <p class="text-gray-600">
          Event involvements information is not available for <%= event.name %> yet.
        </p>
      </div>
    </div>
  <% end %>
</div>
