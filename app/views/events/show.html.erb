<%= render partial: "events/header", locals: {event: @event} %>

<%= turbo_frame_tag dom_id(@event), data: {turbo_action: "advance", turbo_frame: "_top"} do %>
  <div class="container py-8">
    <%= render partial: "events/navigation", locals: {event: @event} %>

    <div class="flex flex-col gap-12 mt-8">
      <section class="bg-white rounded-lg border p-6 shadow-sm">
        <div class="grid gap-6 items-center <%= (@event.start_date.present? && @event.start_date > Date.today && @event.date_precision == "day" || (@event.today? && !@event.meetup?)) ? "grid-cols-2 sm:grid-cols-4" : "grid-cols-3" %>">
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-1"><%= @event.talks.count %></div>
            <div class="text-sm font-medium text-gray-600">Talks</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-1"><%= @event.speakers.count %></div>
            <div class="text-sm font-medium text-gray-600">Speakers</div>
          </div>
          <div class="text-center">
            <% if @event.meetup? %>
              <div class="text-3xl font-bold text-primary mb-1"><%= @event.talks.where(meta_talk: true).count %></div>
              <div class="text-sm font-medium text-gray-600">Events</div>
            <% else %>
              <div class="text-3xl font-bold text-primary mb-1"><%= @event.sponsors.count %></div>
              <div class="text-sm font-medium text-gray-600">Sponsors</div>
            <% end %>
          </div>

          <% if @event.start_date.present? && @event.start_date > Date.today && @event.date_precision == "day" %>
            <% days_until = (@event.start_date - Date.today).to_i %>
            <div class="text-center">
              <div class="flex justify-center gap-1 mb-2">
                <% days_str = days_until.to_s.rjust(2, "0") %>
                <% days_str.chars.each do |digit| %>
                  <div class="relative bg-gray-900 rounded w-8 h-12 flex items-center justify-center font-mono">
                    <div class="absolute inset-0 overflow-hidden rounded-t" style="clip-path: inset(0 0 50% 0);">
                      <div class="text-xl font-bold text-white flex items-center justify-center h-full">
                        <%= digit %>
                      </div>
                    </div>

                    <div class="absolute inset-0 overflow-hidden rounded-b" style="clip-path: inset(50% 0 0 0);">
                      <div class="text-xl font-bold text-white flex items-center justify-center h-full">
                        <%= digit %>
                      </div>
                    </div>

                    <div class="absolute inset-x-0 top-1/2 h-px bg-black shadow-sm transform -translate-y-px z-10"></div>
                  </div>
                <% end %>
              </div>
              <div class="text-sm font-medium text-gray-600">Days Until</div>
            </div>
          <% elsif @event.today? && !@event.meetup? %>
            <div class="text-center">
              <div class="text-2xl font-bold text-green-600 mb-1 animate-pulse">
                LIVE
              </div>
              <div class="text-sm font-medium text-gray-600">Happening Now</div>
            </div>
          <% end %>
        </div>
      </section>

      <% if @event.meetup? && (@upcoming_meetup_events&.any? || @recent_meetup_events&.any?) %>

        <% if @upcoming_meetup_events&.any? %>
          <section class="flex flex-col w-full gap-4">
            <div class="flex items-center justify-between w-full">
              <h2 class="text-primary shrink-0">Upcoming Events</h2>
              <%= link_to "see all events", event_events_path(@event), class: "link text-right w-full" %>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <% @upcoming_meetup_events.each do |meta_talk| %>
                <%= render "shared/meta_talk_card", meta_talk: meta_talk, compact_speakers: true, hide_date_sidebar: true %>
              <% end %>
            </div>
          </section>
        <% end %>

        <% if @recent_meetup_events&.any? %>
          <section class="flex flex-col w-full gap-4">
            <div class="flex items-center justify-between w-full">
              <h2 class="text-primary shrink-0">Recent Events</h2>
              <%= link_to "see all events", event_events_path(@event), class: "link text-right w-full" %>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <% @recent_meetup_events.each do |meta_talk| %>
                <%= render "shared/meta_talk_card", meta_talk: meta_talk, compact_speakers: true, hide_date_sidebar: true %>
              <% end %>
            </div>
          </section>
        <% end %>
      <% elsif @keynotes&.any? %>
        <section class="flex flex-col w-full gap-4">
          <div class="flex items-center justify-between w-full">
            <h2 class="text-primary shrink-0">Keynotes</h2>
            <%= link_to "see all talks", event_talks_path(@event), class: "link text-right w-full" %>
          </div>
          <div class="grid min-w-full grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
            <%= render partial: "talks/card",
                  collection: @keynotes,
                  as: :talk,
                  locals: {
                    favoritable: true,
                    user_favorite_talks_ids: @user_favorite_talks_ids,
                    watched_talks_ids: user_watched_talks_ids,
                    back_to: event_path(@event),
                    back_to_title: @event.name
                  } %>
          </div>
        </section>
      <% end %>

      <% if @recent_talks.any? %>
        <section class="flex flex-col w-full gap-4">
          <div class="flex items-center justify-between w-full">
            <h2 class="text-primary shrink-0">Talks</h2>
            <%= link_to "see all talks", event_talks_path(@event), class: "link text-right w-full" %>
          </div>
          <div class="grid min-w-full grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
            <%= render partial: "talks/card",
                  collection: @recent_talks,
                  as: :talk,
                  locals: {
                    favoritable: true,
                    user_favorite_talks_ids: @user_favorite_talks_ids,
                    watched_talks_ids: user_watched_talks_ids,
                    back_to: event_path(@event),
                    back_to_title: @event.name
                  } %>
          </div>
        </section>
      <% end %>

      <% if @featured_speakers.any? %>
        <section class="flex flex-col w-full gap-4">
          <div class="flex items-center justify-between w-full">
            <h2 class="text-primary shrink-0">Speakers</h2>
            <%= link_to "see all speakers", event_speakers_path(@event), class: "link text-right w-full" %>
          </div>
          <div class="relative" data-controller="scroll">
            <div class="overflow-x-auto scroll-smooth snap-x snap-mandatory"
                 data-scroll-target="container"
                 data-action="scroll->scroll#checkScroll">
              <div class="flex pb-4 gap-4">
                <% @featured_speakers.each do |speaker| %>
                  <div class="snap-start" data-scroll-target="card">
                    <%= render partial: "speakers/card", locals: {speaker: speaker} %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="absolute right-0 top-0 h-full w-24 bg-gradient-to-l from-white to-transparent pointer-events-none"
                 data-scroll-target="gradient"></div>
          </div>
        </section>
      <% end %>

      <% if @sponsors.any? %>
        <section class="flex flex-col w-full gap-4">
          <div class="flex items-center justify-between w-full">
            <h2 class="text-primary shrink-0">Sponsors</h2>
            <%= link_to "see all sponsors", event_sponsors_path(@event), class: "link text-right w-full" %>
          </div>
          <div class="relative" data-controller="scroll">
            <div class="overflow-x-auto scroll-smooth snap-x snap-mandatory"
                 data-scroll-target="container"
                 data-action="scroll->scroll#checkScroll">
              <div class="flex pb-4 gap-4">
                <% @sponsors.each do |event_sponsor| %>
                  <div class="snap-start" data-scroll-target="card">
                    <%= render partial: "sponsors/card", locals: {
                          sponsor: event_sponsor.sponsor,
                          event_sponsor: event_sponsor,
                          turbo_frame: true,
                          hide_event_count: true
                        } %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="absolute right-0 top-0 h-full w-24 bg-gradient-to-l from-white to-transparent pointer-events-none"
                 data-scroll-target="gradient"></div>
          </div>
        </section>
      <% end %>

      <% if @event.talks.empty? && @event.speakers.empty? && @sponsors.empty? %>
        <div class="text-center py-12">
          <div class="max-w-md mx-auto">
            <div class="text-6xl mb-4">ðŸŽ¤</div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Coming Soon</h2>
            <p class="text-gray-600 mb-6">
              Help us make this event complete! Do you have recordings, speaker info, or sponsor details for <%= @event.name %>?
            </p>
            <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 text-left">
              <h3 class="font-semibold text-amber-800 mb-2">How to contribute:</h3>
              <ul class="text-sm text-amber-700 space-y-1">
                <li>â€¢ Check the event website or program</li>
                <li>â€¢ Look for recordings or speaker information</li>
                <li>â€¢ <a href="https://github.com/rubyevents/rubyevents/issues/new?title=<%= CGI.escape("#{@event.name} Content") %>&body=<%= CGI.escape("<!-- Your Content Here -->\n\nIssue opened from event page: #{event_url(@event)}") %>" class="underline hover:text-amber-900" target="_blank">Open an issue on GitHub</a></li>
                <li>â€¢ <a href="https://github.com/rubyevents/rubyevents/blob/main/docs/contributing.md" class="underline hover:text-amber-900" target="_blank">Submit data via GitHub</a></li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
