<%= ui_button url: edit_profile_path(user), kind: :neutral, size: :sm, data: {turbo_frame: "modal"} do %>
  <%= fa "pen", size: :xs %>
  <span>Update speaker page</span>
<% end %>

<% if user.github_handle.present? || user.bsky.present? %>
  <%= ui_button url: profiles_enhance_path(user), method: :put, kind: :neutral, size: :sm do %>
    <%= fa "wand-magic-sparkles", size: :xs %>
    <span>Enhance Profile</span>
  <% end %>
<% end %>

<%= ui_button url: avo.resources_user_path(user), target: :_blank, kind: :neutral, size: :sm do %>
  <%= fa :avocado, size: :xs %>

  <span>Open in Avo</span>
<% end %>

<% if Rails.env.development? %>
  <%= ui_button url: profile_url(user, host: "https://rubyevents.org", port: 443), target: :_blank, kind: :neutral, size: :sm do %>
    <%= fa :browser, size: :xs %>
    <span>Show on RubyEvents.org</span>
  <% end %>
<% end %>
