<h2 class="text-2xl font-bold mb-2 text-center">Languages</h2>
<p class="text-gray-500 text-center mb-6">The languages of the talks you watched</p>

<div class="space-y-4 flex-1">
  <% @languages_watched.each do |language, count| %>
    <% percentage = (@total_talks_watched.positive? ? (count.to_f / @total_talks_watched * 100).round : 0) %>
    <div>
      <div class="flex justify-between mb-1">
        <span class="font-medium"><%= language %></span>
        <span class="text-gray-500"><%= count %> (<%= percentage %>%)</span>
      </div>
      <div class="bg-gray-100 rounded-full h-3">
        <div class="month-bar h-3" style="width: <%= percentage %>%"></div>
      </div>
    </div>
  <% end %>
</div>
