<h2 class="text-2xl font-bold mb-2 text-center">Stamps Collected</h2>
<p class="text-gray-500 text-center mb-6">Souvenirs from your <%= year %> adventures</p>

<div class="flex-1 space-y-6">
  <% if country_stamps.any? %>
    <div>
      <p class="text-sm font-semibold mb-2 text-gray-600">ğŸŒ Countries Visited</p>
      <div class="stamp-grid">
        <% country_stamps.first(6).each do |stamp| %>
          <div class="stamp-item">
            <%= image_tag stamp.asset_path, alt: stamp.name %>
          </div>
        <% end %>
      </div>
      <% if country_stamps.count > 6 %>
        <p class="text-xs text-gray-500 mt-2 text-center">+ <%= country_stamps.count - 6 %> more</p>
      <% end %>
    </div>
  <% end %>

  <% if event_stamps.any? %>
    <div>
      <p class="text-sm font-semibold mb-2 text-gray-600">ğŸª Event Stamps</p>
      <div class="stamp-grid">
        <% event_stamps.first(6).each do |stamp| %>
          <div class="stamp-item">
            <%= image_tag stamp.asset_path, alt: stamp.name %>
          </div>
        <% end %>
      </div>
      <% if event_stamps.count > 6 %>
        <p class="text-xs text-gray-500 mt-2 text-center">+ <%= event_stamps.count - 6 %> more</p>
      <% end %>
    </div>
  <% end %>

  <% if achievement_stamps.any? %>
    <div>
      <p class="text-sm font-semibold mb-2 text-gray-600">ğŸ† Achievements</p>
      <div class="stamp-grid">
        <% achievement_stamps.each do |stamp| %>
          <div class="stamp-item">
            <%= image_tag stamp.asset_path, alt: stamp.name %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
