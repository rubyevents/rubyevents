<%# locals: (talk:, video_provider:, video_id:, is_watched: false) %>
<% is_future = talk.date.present? && talk.date.future? %>

<div class="relative w-full h-full block">
  <%= image_tag talk.thumbnail_xl, class: "w-full h-full object-cover rounded-xl opacity-60 #{talk.thumbnail_classes}" %>

  <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-black/20 rounded-xl"></div>

  <div class="absolute inset-0 flex flex-col items-center justify-center gap-3 p-6 text-center text-white">
    <div class="p-4 bg-white/20 backdrop-blur-sm rounded-full">
      <%= fa("clock", size: :xl, class: "fill-white") %>
    </div>

    <div class="flex flex-col gap-1">
      <div class="text-lg font-semibold">
        <% if talk.date.past? %>
          <%= talk.formatted_kind.capitalize %> was held
        <% else %>
          Scheduled
        <% end %>
      </div>
      <div class="text-sm text-white/80">
        <%= talk.event.name %>
        <% if talk.location && !talk.location.in?(["Earth", "online", "Online"]) %>
          · <%= talk.location %>
        <% end %>
        · <%= talk.formatted_date %>
      </div>
    </div>
  </div>

  <%= render partial: "talks/player_action_buttons", locals: {talk: talk, is_watched: is_watched, show_watched_button: !is_future} %>
</div>
