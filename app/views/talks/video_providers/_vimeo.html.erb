<%# locals: (talk:, video_provider:, video_id:, is_watched: false) %>

<div data-video-player-target="playerWrapper" class="w-full max-w-full">
  <div class="picture-in-picture-container w-full max-w-full" style="view-transition-name: <%= dom_id(talk, :image) %>">
    <div
      class="image rounded-xl w-full"
      id="<%= dom_id(talk, :vimeo) %>"
      data-video-player-target="player"
      data-vimeo-id="<%= video_id %>"
      data-vimeo-start-time="<%= is_watched ? nil : talk.start_seconds %>"
      data-vimeo-end-time="<%= talk.end_seconds %>">
    </div>
  </div>
</div>
