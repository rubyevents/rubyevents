<%= turbo_refreshes_with method: :morph, scroll: :preserve %>

<div class="container flex flex-col w-full gap-4 my-8 hotwire-native:my-0 hotwire-native:mb-8">
  <div class="flex items-end gap-2 title text-primary hotwire-native:mb-3">
    <h1 class="title hotwire-native:hidden" style="view-transition-name: title">
      <%= title "Videos of recent talks" %>

      <% if params[:s].present? %>
        : search results for "<%= params[:s] %>"
      <% end %>
    </h1>
  </div>

  <div class="flex justify-end items-center">
    <div class="flex items-center gap-2">
      <label for="order_by" class="text-sm font-medium text-gray-700">Sort by:</label>
      <select id="order_by" name="order_by" class="select select-bordered select-sm" data-controller="url-filter" data-url-filter-param-value="order_by">
        <% if params[:s].present? %>
          <option value="relevance" <%= "selected" if (params[:order_by] || "relevance") == "relevance" %>>Relevance</option>
        <% end %>
        <option value="date_desc" <%= "selected" if params[:order_by] == "date_desc" %>>Date (newest first)</option>
        <option value="date_asc" <%= "selected" if params[:order_by] == "date_asc" %>>Date (oldest first)</option>
      </select>
    </div>
  </div>
  <%= turbo_frame_tag "talks", target: "_top" do %>
    <div id="talks" class="grid min-w-full grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gallery">
      <%= render partial: "talks/card",
            collection: @talks,
            as: :talk,
            locals: {
              favoritable: true,
              user_favorite_talks_ids: @user_favorite_talks_ids,
              watched_talks_ids: user_watched_talks_ids,
              back_to: back_to_from_request
            } %>
    </div>
    <div class="flex mt-4 w-full">
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  <% end %>
</div>
