<%= turbo_stream.replace "organizations_search_results" do %>
  <div
    id="organizations_search_results"
    class="<%= @organizations.any? ? 'pb-4 border-b' : 'hidden' %>"
    data-spotlight-search-target="organizationsSearchResults">
    <% if @organizations.any? %>
      <div class="flex items-center flex-wrap gap-2 py-2">
        <span class="text-sm font-medium text-gray-600">Organizations</span>
        <span class="text-xs text-gray-400">(<%= total_count %>)</span>
      </div>
      <div class="flex flex-wrap gap-2">
        <% @organizations.each do |organization| %>
          <%= link_to organization_path(organization), target: "_top", class: "badge badge-ghost hover:bg-gray-200 px-3 py-3 text-sm gap-1" do %>
            <%= organization.name %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
